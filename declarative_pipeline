pipeline {
    agent any
        stages {
            stage('One') {
                steps (
                    echo "hi, I'm Priyanka Mohan"
                )
            }
            stage('Two') {
                steps {
                    input('Do you want to proceed?')
                }
             stage('Three') {
                 when {
                     not {
                         branch "master"
                     }
                 }
                 steps {
                     echo "hello"
                 }
             }
             stage('Four') {
                 parallel {
                     stage('unit Test') {
                         steps {
                             echo "running the unit test..."
                         }
                     }
                     stage('Integration test') {
                         agent {
                             docker {
                                 reuseNode false
                                 image 'ubuntu'
                             }
                         }
                         steps {
                             echo 'running the integration test...'
                         }
                     }
                 }
             }               }
        }
}